<h1>New Game</h1>


<div class="word">
  <%  @random_letters.each do |letter| %>
    <div class="letter"> <%= letter %> </div>
  <% end %>
</div>

<div>
  <p>What is the longest word you can find ?</p>
  <form action="/score" method="post" class="form-inline">
    <input type="text" class="form-control" id="word" name="word_submitted">
    <input type="submit" value="Play" class="btn btn-primary" id="submit">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :random_letters, @random_letters.join %>
  </form>
</div>
